        {
            "command": "character",
            "character_id": "1",
            "character_cmd": "talk"
        },
        {
            "command": "speak",
            "speaker": "Emma",
            "line": "I saw some flyers for volunteering on the notice board. I like kids, so I figured it would be fun to go play with them, but I would be less nervous if you came with me.",
            "voice_idx": "3",
            "is_plus": false
        },
        {
            "command": "speak",
            "speaker": "[player]",
            "line": "Ah, I see.",
