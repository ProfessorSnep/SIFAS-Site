        },
        {
            "command": "speak",
            "speaker": "[player]",
            "line": "I can't pin down how you would look playing with kids. This'll be interesting!",
            "voice_idx": null,
            "is_plus": false
        },
        {
            "command": "character",
            "character_id": "1",
            "character_cmd": "face",
