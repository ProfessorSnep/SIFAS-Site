        {
            "command": "speak",
            "speaker": "Emma",
            "line": "I was thinking of volunteering at the daycare on Sunday. Would you come with me?",
            "voice_idx": "2",
            "is_plus": false
        },
        {
            "command": "speak",
            "speaker": "[player]",
            "line": "Yeah, of course. Why, though?",
