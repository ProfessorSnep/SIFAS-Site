        {
            "command": "speak",
            "speaker": "[player]",
            "line": "*Giggle* I think we might be on the same wavelength.",
            "voice_idx": null,
            "is_plus": false
        },
        {
            "command": "character",
            "character_id": "1",
            "character_cmd": "face",
